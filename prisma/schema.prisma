// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Question {
  id       String  @id(map: "primary") @db.Uuid
  topic    Topic
  tags     Tag[]
  text     String
  solution String
  author   User?   @relation(fields: [authorId], references: [id])
  authorId String? @db.Uuid
}

model PrivateQuestion {
  id       String  @id(map: "primary") @db.Uuid
  topic    Topic
  tags     Tag[]
  text     String
  solution String
  author   User?   @relation(fields: [authorId], references: [id])
  authorId String? @db.Uuid
}

model Tag {
  id                 String            @id(map: "primary") @db.Uuid
  name               String
  questions          Question[]
  privateQuestions   PrivateQuestion[] @relation(fields: [privateQuestionsId], references: [id])
  privateQuestionsId String?           @db.Uuid
}

model User {
  id              String           @id(map: "primary") @db.Uuid
  email           String           @unique
  name            String
  role            UserRole         @default(USER)
  questions       Question[]
  QuestionPrivate PrivateQuestion?
}

enum Topic {
  NUM
  ALG
  MEAS
  GEO
  STAT
  PROB
  CALC
}

enum UserRole {
  ADMIN
  MANAGER
  USER
}
